{
  "name": "phamilypharma.com",
  "version": "1.0.0",
  "private": true,
  "description": "PhamilyPharma website - local build scripts",
  "scripts": {
    "build": "esbuild index.ts --bundle --platform=browser --format=esm --outfile=x-bundle.js",
    "watch": "esbuild index.ts --bundle --platform=browser --format=esm --outfile=x-bundle.js --watch",
    "serve": "http-server . -p 8080",
    "serve:https": "http-server . -p 8443 -S --cert ./localhost.pem --key ./localhost-key.pem",
    "dev": "vite",
    "dev:https": "vite --host --port 8443 --https",
    "preview": "vite preview --port 8080",
    "extractTestCatalog": "node scripts/extract-test-catalog-css.mjs"
  },
  "devDependencies": {
    "cheerio": "^1.1.2",
    "concurrently": "^8.2.0",
    "css-tree": "^3.1.0",
    "esbuild": "^0.19.0",
    "http-server": "^14.1.1",
    "postcss": "^8.5.6",
    "postcss-selector-parser": "^7.1.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@barba/core": "^2.10.3"
  }
}
